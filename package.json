{
    "name": "hse_military_bot",
    "version": "2.0.0",
    "license": "Apache-2.0",
    "author": "Maxim Shmakov <mvshmakov@mail.ru>",
    "description": "Application for HSE Military Training Center schedule and other",
    "keywords": [
        "hse",
        "military",
        "training",
        "center",
        "telegram",
        "bot"
    ],
    "homepage": "https://iot-olap-clickhouse.herokuapp.com/",
    "repository": {
        "type": "git",
        "url": "git://github.com/mvshmakov/hse-military-bot.git"
    },
    "bugs": {
        "url": "https://github.com/mvshmakov/hse-military-bot/issues"
    },
    "main": "dist/main.js",
    "engines": {
        "node": "13.7.x",
        "npm": "6.9.x"
    },
    "scripts": {
        "build": "webpack --progress -p --config=configs/webpack.config.js",
        "build:bundle-analyzer": "BUNDLE_ANALYZER=true && npm run build",
        "bootstrap": "npm install && npm run configure",
        "clean": "rm -rfd node_modules webpack-bundle-analyzer.html && npm run clean:dist",
        "clean:dist": "rm -rfd dist",
        "configure": "ln -snf ../src ./node_modules/@",
        "prettier": "prettier --write './src/**/*.{js,ts,json}' './configs/**/*.{js,ts,json}'",
        "prettier:check": "prettier --check './src/**/*.{js,ts,json}' './configs/**/*.{js,ts,json}'",
        "lint": "eslint --fix './src/**/*.{js,ts,json}' './configs/**/*.{js,ts,json}'",
        "ncu": "npx npm-check-updates",
        "ncu:update": "npx npm-check-updates -u",
        "start": "env NODE_HEAPDUMP_OPTIONS=nosignal NODE_ENV=production pm2 start ./dist/bin/starter.js --name node -i max",
        "start:dev": "env NODE_HEAPDUMP_OPTIONS=nosignal NODE_ENV=development nodemon src/bin/starter.ts --config configs/nodemon.json",
        "start:dev:debug": "env NODE_HEAPDUMP_OPTIONS=nosignal DEBUG='express:*' && npm run start:dev",
        "start:dev:schedule": "env NODE_HEAPDUMP_OPTIONS=nosignal NODE_ENV=development nodemon src/bin/starter.ts --mode=downloader --config configs/nodemon.json",
        "start:dev:serverOnly": "env NODE_HEAPDUMP_OPTIONS=nosignal NODE_ENV=development nodemon src/bin/starter.ts --mode=serverOnly --config configs/nodemon.json",
        "test": "jest --config=configs/jest.json",
        "test:watch": "jest --watch --coverage --config=configs/jest.json",
        "test:coverage": "jest --coverage --config=configs/jest.json",
        "type-check": "tsc --noEmit",
        "type-check:watch": "npm run type-check -- --watch"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts}": [
            "npm run prettier",
            "npm run test:coverage -- --passWithNoTests"
        ]
    },
    "dependencies": {
        "bot-metrica": "^1.0.2",
        "commander": "^5.0.0",
        "compression": "^1.7.4",
        "connect-timeout": "^1.9.0",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "exceljs": "^3.8.2",
        "express": "^4.17.1",
        "express-rate-limit": "^5.1.1",
        "express-request-id": "^1.4.1",
        "express-validator": "^6.4.0",
        "express-winston": "^4.0.3",
        "firebase": "^7.13.1",
        "firebase-admin": "^8.10.0",
        "google-news-rss": "^0.4.1",
        "heapdump": "^0.3.15",
        "helmet": "^3.22.0",
        "node-fetch": "^2.6.0",
        "pm2": "^4.2.3",
        "response-time": "^2.3.2",
        "serve-favicon": "^2.5.0",
        "telegraf": "^3.37.0",
        "telegraf-logger": "^3.0.0",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.8.4",
        "@babel/core": "^7.9.0",
        "@babel/node": "^7.8.7",
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/preset-env": "^7.9.0",
        "@babel/preset-typescript": "^7.9.0",
        "@types/commander": "^2.12.2",
        "@types/compression": "^1.7.0",
        "@types/connect-timeout": "0.0.34",
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "^2.8.6",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.3",
        "@types/express-rate-limit": "^5.0.0",
        "@types/express-request-id": "^1.4.1",
        "@types/express-winston": "^4.0.0",
        "@types/firebase": "^3.2.1",
        "@types/heapdump": "^0.3.1",
        "@types/helmet": "^0.0.45",
        "@types/htmlparser2": "^3.10.1",
        "@types/jest": "^25.1.4",
        "@types/node": "^13.9.8",
        "@types/node-fetch": "^2.5.5",
        "@types/response-time": "^2.3.4",
        "@types/serve-favicon": "^2.5.0",
        "@typescript-eslint/eslint-plugin": "^2.26.0",
        "@typescript-eslint/parser": "^2.26.0",
        "babel-jest": "^25.2.4",
        "babel-loader": "^8.1.0",
        "clean-webpack-plugin": "^3.0.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.1",
        "eslint-plugin-prettier": "^3.1.2",
        "file-loader": "^6.0.0",
        "husky": "^4.2.3",
        "image-webpack-loader": "^6.0.0",
        "jest": "^25.2.4",
        "jest-cli": "^25.2.4",
        "lint-staged": "^10.1.1",
        "nodemon": "^2.0.2",
        "prettier": "2.0.2",
        "ts-loader": "^6.2.2",
        "ts-node": "^8.8.1",
        "typescript": "^3.8.3",
        "uglifyjs-webpack-plugin": "^2.2.0",
        "webpack": "^4.42.1",
        "webpack-bundle-analyzer": "^3.6.1",
        "webpack-cli": "^3.3.11"
    }
}
